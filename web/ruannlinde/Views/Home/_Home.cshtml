
<script type="text/ng-template" id="home.htm">
	<div ng-controller="HomeController" class="home" ng-cloak>
		<p class="text-center text-muted" ng-if="model.loading">
			<span class="fa fa-spinner fa-spin fa-4x"></span>
			<br /><br />
			Processing, please wait...
		</p>
		<span id="top"></span>
		@Html.Partial("_LoginPartial")
		<div class="{{layout}}">
			<div class="row">
				<div class="col-12">
					<h3>LOG</h3><br />
				</div>
			</div>
			<div class="row">
				<div class="col-12">
					<button class="btn btn-info" ng-click="LoadLog()">Load Log</button>
					<button class="btn btn-info" ng-click="ClearLog()">Clear Log</button>
					<button class="btn btn-info" ng-click="ThrowDomainException()">Throw</button><br /><br />
					<h3>Last Load Date: {{model.lastLoadDate | date : 'EEEE, MMMM d, y HH:mm:ss' }}</h3>
				</div>
			</div><br>
			<div class="row">
				<div class="col-12">
					@*<p ng-bind-html=model.log></p>*@
					<p>
						<div ng-repeat="item in model.log.content">
							Logger: {{item.Logger}}<br />
							Level: {{item.Level}}<br />
							Message: {{item.Message}}<br />
							Exception: {{item.Exception}}<br /><br />
						</div>
					</p>
				</div>
			</div>
		</div>
	</div>
</script>

